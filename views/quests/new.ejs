<%- include("../partials/header", {title: "New Quest"}) %>

<h2>New Quest</h2>

<form action="/quests" method="post">
  <label for="title">Title:</label>
  <input type="text" name="title" id="title" />

  <label for="description">Description:</label>
  <input type="text" name="description" id="description" />

  <fieldset>
    <legend>Character[s] to assign</legend>
    <% characters.forEach(function(character) { %>
    <div>
      <input
        type="checkbox"
        id="character-<%= character.character_id %>"
        name="characterIndices"
        value="<%= character.character_id %>"
      />
      <label for="character-<%= character.character_id %>"><%= character.name %></label>
    </div>
    <% }); %>
  </fieldset>

  <button type="submit">Submit</button>
</form>

<%- include("../partials/footer") %>
