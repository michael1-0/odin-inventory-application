<%- include('../partials/header', { title: 'Characters' }) %>

<h2>Characters</h2>
<a href="/characters/new">new</a>

<table cellpadding="8" cellspacing="0">
  <% if ( characters.length > 0 ) { %> 
    <thead>
    <tr>
      <th>Name</th>
      <th>Height (cm)</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
    </thead>
  <% } %>
  <tbody>
    <% characters.forEach(character => { %>
    <tr>
      <td><%= character.name %></td>
      <td>
        <% if (character.height) { %> <%= character.height %> <% } else { %> N/A
        <% } %>
      </td>
      <td><%= character.description %></td>
      <td>
        <button>
          <a href="/characters/<%= character.character_id  %>/edit">update</a>
        </button>
        <form
          action="/characters/<%= character.character_id  %>/delete"
          method="post"
          onsubmit="return confirm('Are you sure you want to delete this?')"
        >
          <button type="submit">delete</button>
        </form>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>
